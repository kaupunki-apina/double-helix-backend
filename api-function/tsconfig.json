{
	"compilerOptions": {
		"target": "ES2018",
		"module": "commonjs",
		"strict": true,
		"strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": "./src",
		"typeRoots": [
			"node_modules/@types"
		],
		"esModuleInterop": true,
		"inlineSourceMap": true,
		"inlineSources": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	}
}
